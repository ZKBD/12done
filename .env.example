# ===========================================
# 12done.com Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ===========================================

# Application
APP_PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=twelvedone
DB_PORT=5432

# Redis
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=change-this-to-a-long-random-string-in-production
JWT_EXPIRES_IN=7d

# Email (Development uses MailHog, no credentials needed)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@12done.com

# Email (Production - uncomment and configure)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# FROM_EMAIL=noreply@12done.com

# Stripe (Phase 2)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Google Maps (Phase 1+)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
